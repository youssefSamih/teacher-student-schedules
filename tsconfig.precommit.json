{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "ESNext",
            "ES2020",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": false,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
        "types": [
            "react",
            "node",
            "jest"
        ],
        "strictFunctionTypes": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}
